#.3066. Minimum Operations to Exceed Threshold Value II.

class Solution {
    public int minOperations(int[] nums, int k) {
        PriorityQueue<Integer> minHeap = new PriorityQueue<>();
        
        // Add all elements to the minHeap
        for (int num : nums) {
            minHeap.add(num);
        }
        
        int operations = 0;
        
        // Continue until all elements are >= k
        while (minHeap.peek() < k) {
            int x = minHeap.poll(); // Get smallest
            int y = minHeap.poll(); // Get second smallest
            
            // Compute new element
            int newElement = (x * 2) + y;
            minHeap.add(newElement);
            
            operations++;
        }
        
        return operations;
    }
}
